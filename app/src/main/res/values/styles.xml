<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextStyle">
        <item name="fontFamily">@font/ysabeau_sc</item>
        <item name="android:textSize">28sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">37.6dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextToTitle" parent="BaseTextStyle">
        <item name="fontFamily">@font/ysabeau_sc</item>
        <item name="android:textSize">38sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextToCaption" parent="BaseTextStyle">
        <item name="fontFamily">@font/ysabeau_sc</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextToList" parent="BaseTextStyle">
        <item name="fontFamily">@font/ysabeau_sc</item>
        <item name="android:textSize">24sp</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">32dp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CustomTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="TextInputEditTextLinearLayout">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>
    
    <style name="CaptionToImageViewText" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ysabeau_sc</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="ShapeAppearance"></style>
</resources>